       http://www.springframework.org/schema/data/jpa 
       http://www.springframework.org/schema/data/jpa/spring-jpa-1.3.xsd
       http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context-4.3.xsd">
       <context:component-scan base-package="com.db.sys.service"/><!-- 扫描service类 -->
       <context:component-scan base-package="com.db.sys.config"/> <!-- 扫描配置类 -->
       <context:component-scan base-package="com.db.sys.aspect"/><!-- 扫描切面 -->
     <!-- 启用注解方式的AOP(默认会注册bean对象，扫描所有@Aspect描述的对象) -->
